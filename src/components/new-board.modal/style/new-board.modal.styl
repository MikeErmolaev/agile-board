.modal
	position absolute
	height 180px
	width 300px
	background #fff
	z-index 2
	top 50%
	left 50%
	margin-left -(@width/2)
	margin-top -(@height/2) - 76px
	padding 15px
	border-radius 20px
	
.title
	text-align center
	border-bottom 1px solid	#68b3e8
	padding-bottom 10px
	
.input-section
	text-align left
	width 90%
	margin 15px auto 0
	
.control
	width 80%
	
label
	font-size 16px
	width 20%
	display inline-block

.input-block
	margin-bottom 15px
	font-size 0

	
.controls
	text-align right
	position absolute
	bottom 15px
	padding-top 10px
	width 270px
	border-top 1px solid #68b3e8