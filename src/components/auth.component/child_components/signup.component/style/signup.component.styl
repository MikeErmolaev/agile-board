.container
	position absolute
	height 500px
	width 500px
	top 50%
	left 50%
	margin-left -(@width/2)
	margin-top -(@height/2) - 76px
	padding 15px
	
form
	text-align left
	width 90%
	margin 15px auto 0
	
label
	font-size 16px
	width 20%
	display inline-block

.ng-valid[required]
	border-left 5px solid #42A948
	
.form-control
	width 80%
	border-radius 4px
	border 1px solid #ccc
	height 30px
	line-height @height

.ng-invalid
	border-left 5px solid #a94442

.form-group
	margin-bottom 25px
	font-size 0
	
button
	width 100%
	margin-bottom 15px
	
.form-warning
	transition .3s ease
	width 80%
	text-align center
	font-size 15px
	float right
	border 1px solid indianred
	border-top none
	color #fff
	background-color indianred
	clearfix()
